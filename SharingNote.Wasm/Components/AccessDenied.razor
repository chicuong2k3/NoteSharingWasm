@inject NavigationManager navigationManager

<MudStack AlignItems="AlignItems.Center">

    <MudText Typo="Typo.h3" Color="Color.Info">Bạn không có quyền truy cập trang này.</MudText>

    <AuthorizeView>
        <Authorized>
            <MudButton Variant="Variant.Filled" DropShadow="false" Size="Size.Small"
                       Color="Color.Secondary" Class="rounded-0"
                       OnClick="@(() => navigationManager.NavigateTo("/"))">
                Quay lại trang chủ
            </MudButton>
        </Authorized>
        <NotAuthorized>
            <MudButton Variant="Variant.Filled" DropShadow="false" Size="Size.Small"
                       Color="Color.Secondary" Class="rounded-0"
                       OnClick="@(() => navigationManager.NavigateTo("/login"))">
                Đăng nhập
            </MudButton>
        </NotAuthorized>
    </AuthorizeView>
</MudStack>

