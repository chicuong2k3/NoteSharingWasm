                Background = Colors.Gray.Darken3,
                DrawerBackground = Colors.Gray.Darken3,
                DrawerText = Colors.Gray.Lighten4,
                AppbarText = Colors.Gray.Lighten4,
                ActionDefault = Colors.Gray.Lighten4,
                ActionDisabled = Colors.Gray.Darken2,
